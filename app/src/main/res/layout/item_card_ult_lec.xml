<?xml version='1.0' encoding='utf-8' ?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8.0dip"
    card_view:cardBackgroundColor="#ffffffff"
    card_view:cardCornerRadius="3.0dip"
    card_view:cardElevation="3.0dip">

    <RelativeLayout
        android:padding="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textColor="@color/Amber_ColorPrimary"
            android:id="@+id/item_c_ul_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Última Lectura"
            android:fontFamily="sans-serif-thin"
            android:textSize="23sp"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_c_ul_tv1">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/item_c_ul_bt2"
                android:background="?selectableItemBackground"
                android:padding="8.0dip"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:src="@drawable/zzz_book_open_page_variant"
                   />

                <TextView
                    android:textSize="15.0dip"
                    android:textStyle="bold"
                    android:textColor="@color/Amber_ColorPrimary"
                    android:gravity="center_vertical"
                    android:id="@+id/item_c_ul_tbt2"
                    android:paddingLeft="4.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Ver Más" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/item_c_ul_bt1"
                android:background="?selectableItemBackground"
                android:padding="8.0dip"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:src="@drawable/zzz_book_open_page_variant"
                    />

                <TextView
                    android:textSize="15.0dip"
                    android:textStyle="bold"
                    android:textColor="@color/Amber_ColorPrimary"
                    android:gravity="center_vertical"
                    android:id="@+id/item_c_ul_tbt1"
                    android:paddingLeft="4.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Ver Más" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
