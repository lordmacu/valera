<?xml version='1.0' encoding='utf-8' ?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8.0dip"
    android:foreground="?selectableItemBackgroundBorderless"
    card_view:cardBackgroundColor="#ffffffff"
    card_view:cardCornerRadius="3.0dip"
    card_view:cardElevation="3.0dip">

    <RelativeLayout
        android:padding="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/Amber_ColorPrimary"
            android:id="@+id/item_c_hf_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versículo del Día"
            android:textSize="23sp"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/item_c_hf_tv2"
            android:paddingTop="5.0dip"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versículo del Día"

            android:textSize="23sp"
            android:layout_below="@+id/item_c_hf_tv1" />

        <LinearLayout
            android:id="@+id/item_c_hf_bt1"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="12.0dip"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_c_hf_tv2"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@mipmap/ic_dots_vertical_grey600_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_c_hf_bt2"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="12.0dip"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_c_hf_bt1"
            android:layout_below="@+id/item_c_hf_tv2">

            <ImageView
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@mipmap/ic_share_variant_grey600_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_c_hf_bt3"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="12.0dip"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_c_hf_bt2"
            android:layout_below="@+id/item_c_hf_tv2">

            <ImageView
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@mipmap/ic_content_copy_grey600_24dp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
